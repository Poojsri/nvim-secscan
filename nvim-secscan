#!/usr/bin/env python3
"""
nvim-secscan CLI - Standalone security scanner
"""

def show_banner():
    banner = """
    ███╗   ██╗██╗   ██╗██╗███╗   ███╗      ███████╗███████╗ ██████╗███████╗ ██████╗ █████╗ ███╗   ██╗
    ████╗  ██║██║   ██║██║████╗ ████║      ██╔════╝██╔════╝██╔════╝██╔════╝██╔════╝██╔══██╗████╗  ██║
    ██╔██╗ ██║██║   ██║██║██╔████╔██║█████╗███████╗█████╗  ██║     ███████╗██║     ███████║██╔██╗ ██║
    ██║╚██╗██║╚██╗ ██╔╝██║██║╚██╔╝██║╚════╝╚════██║██╔══╝  ██║     ╚════██║██║     ██╔══██║██║╚██╗██║
    ██║ ╚████║ ╚████╔╝ ██║██║ ╚═╝ ██║      ███████║███████╗╚██████╗███████║╚██████╗██║  ██║██║ ╚████║
    ╚═╝  ╚═══╝  ╚═══╝  ╚═╝╚═╝     ╚═╝      ╚══════╝╚══════╝ ╚═════╝╚══════╝ ╚═════╝╚═╝  ╚═╝╚═╝  ╚═══╝
    
    🛡️  Security Scanner for Code & Dependencies | v1.0
    """
    print(banner)

def main():
    import sys
    import os
    
    show_banner()
    
    if len(sys.argv) < 2:
        print("Usage: nvim-secscan <file>")
        print("       python3 scripts/secscan-cli.py <file>")
        sys.exit(1)
    
    # Delegate to the actual CLI script
    script_path = os.path.join(os.path.dirname(__file__), "scripts", "secscan-cli.py")
    if os.path.exists(script_path):
        os.system(f"python3 {script_path} {sys.argv[1]}")
    else:
        print("Error: secscan-cli.py not found")
        sys.exit(1)

if __name__ == "__main__":
    main()